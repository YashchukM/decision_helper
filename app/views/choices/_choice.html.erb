<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--6-col" style="width: 100%">
  <div class="mdl-card__title mdl-card--expand" style="background-color: #0091ea">
    <h2 class="mdl-card__title-text"><%= choice.name %></h2>
  </div>

  <div class="mdl-card__actions mdl-card--border">

    <% if choice.criteriums.any? %>
        <table>
          <thead>
            <tr>
              <th style="width: 400px;">Criteria</th>
              <th>Importance</th>
              <th>Valuation</th>
            </tr>
          </thead>

          <tbody>
            <%= render partial: 'criteriums/criterium', collection: choice.criteriums %>
          </tbody>
        </table>
    <% end %>
  </div>

  <div>
    <%= button_to 'Add criteria', new_criterium_path, method: :get,
                  class: 'add-criteria-btn mdl-button mdl-js-button mdl-button--raised mdl-button--accent',
                  params: { choice_id: choice.id } %>
  </div>
</div>