<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--6-col" style="width: 95%">
  <div class="mdl-card__title mdl-card--expand">
    <h2 class="mdl-card__title-text">Choice</h2>
  </div>

  <div class="mdl-card__supporting-text">
    <%= choice.name %>
  </div>

  <div class="mdl-card__actions mdl-card--border">

    <% if choice.criteriums.any? %>
        <%= form_tag  do %>

        <% end %>
        <%= render partial: 'criteriums/criterium', collection: choice.criteriums %>
    <% end %>

    <%= button_to 'Add', new_criterium_path, method: :get,
        class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--accent', params: {choice_id: choice.id} %>
  </div>
</div>