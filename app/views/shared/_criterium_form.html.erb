<div>
  <%= form_for @criterium, url: criteriums_path do |f| %>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :name, class: 'mdl-textfield__label' %>
        <%= f.text_field :name, class: 'mdl-textfield__input' %>
      </div>

      <%= f.hidden_field :choice %>

      <%= f.submit 'Add', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' do %>
          <i class="material-icons">add</i>
      <% end %>
  <% end %>
</div>
