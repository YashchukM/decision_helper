<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--6-col">
  <%= form_for @choice, url: choices_path do |f| %>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :name, class: 'mdl-textfield__label' %>
        <%= f.text_field :name, class: 'mdl-textfield__input' %>
      </div>

      <%= f.submit 'Add', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
  <% end %>
</div>
