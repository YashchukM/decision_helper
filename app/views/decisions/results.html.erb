<h1>Congratulations, your results are ready!</h1>

<div class="mdl-grid">
    <div id="best_abs" class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">Best </h2>
      </div>

      <div class="mdl-card__supporting-text">
        <%= @decision.best_abs.name %>
      </div>
    </div>

    <div id="best_usr" class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">Best for user</h2>
      </div>

      <div class="mdl-card__supporting-text">
        <%= @decision.best_user.name %>
      </div>
    </div>

    <div id="best_bal" class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">Best balanced</h2>
      </div>

      <div class="mdl-card__supporting-text">
        <%= @decision.best_balanced.name %>
      </div>
    </div>
</div>